<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_blood_frame">

    <TextView
        android:id="@+id/tvDlgKillTip"
        android:layout_width="231dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="Desea borrarlo?"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

    <Button
        android:id="@+id/bnKillDlgSi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button"
        android:text="SÃ­"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/tvDlgKillTip" />

    <Button
        android:id="@+id/bnKillDlgNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_gray"
        android:text="No"
        app:layout_constraintEnd_toEndOf="@+id/tvDlgKillTip"
        app:layout_constraintStart_toEndOf="@+id/bnKillDlgSi"
        app:layout_constraintTop_toTopOf="@+id/bnKillDlgSi" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="85dp"
        android:layout_height="87dp"
        app:layout_constraintTop_toTopOf="@+id/tvDlgKillTip"
        app:srcCompat="@drawable/samurai_small"
        tools:layout_editor_absoluteX="51dp" />
</androidx.constraintlayout.widget.ConstraintLayout>